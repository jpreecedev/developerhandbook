{
  "name": "developerhandbook",
  "author": "Jon Preece",
  "license": "MIT",
  "version": "0.0.0-development",
  "description": "Source code for DeveloperHandbook.com blog",
  "main": "index.js",
  "scripts": {
    "prettier": "prettier \"./src/**/*.{js,json,yaml,yml,md}\" --write",
    "lint": "./node_modules/.bin/eslint --ext .js,.jsx --ignore-pattern public .",
    "start": "gatsby develop",
    "release": "semantic-release --no-ci",
    "build": "rm -rf .cache public && gatsby build",
    "deploy:s3": "s3-deploy './public/**' --cwd './public/' --bucket developerhandbook.com  --deleteRemoved --gzip"
  },
  "homepage": "https://developerhandbook.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jpreecedev/developerhandbook.git"
  },
  "bugs": {
    "url": "https://github.com/jpreecedev/developerhandbook/issues"
  },
  "dependencies": {
    "@sentry/browser": "^5.16.1",
    "bootstrap": "^4.5.0",
    "classnames": "^2.2.6",
    "disqus-react": "^1.0.8",
    "gatsby": "^2.23.1",
    "gatsby-image": "^2.4.6",
    "gatsby-plugin-feed": "^2.5.4",
    "gatsby-plugin-google-analytics": "^2.3.3",
    "gatsby-plugin-manifest": "^2.4.10",
    "gatsby-plugin-offline": "^3.2.8",
    "gatsby-plugin-polyfill-io": "^1.1.0",
    "gatsby-plugin-postcss": "^2.3.3",
    "gatsby-plugin-react-helmet": "^3.3.3",
    "gatsby-plugin-robots-txt": "^1.5.1",
    "gatsby-plugin-sharp": "^2.6.10",
    "gatsby-remark-autolink-headers": "^2.3.4",
    "gatsby-remark-copy-linked-files": "^2.3.4",
    "gatsby-remark-images": "^3.3.9",
    "gatsby-remark-prismjs": "^3.5.3",
    "gatsby-remark-responsive-iframe": "^2.4.4",
    "gatsby-remark-smartypants": "^2.3.3",
    "gatsby-source-filesystem": "^2.3.10",
    "gatsby-transformer-remark": "^2.8.14",
    "gatsby-transformer-sharp": "^2.5.4",
    "node-sass": "^4.14.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.1",
    "postcss-reporter": "^6.0.1",
    "prismjs": "^1.20.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^5.2.1",
    "react-lazy-load": "^3.0.13",
    "rehype-react": "^4.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.0",
    "gatsby-plugin-no-sourcemaps": "^2.2.0",
    "gatsby-plugin-sass": "^2.3.3",
    "gatsby-plugin-sitemap": "^2.4.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "prettier": "^2.0.5",
    "s3-deploy": "^1.4.0",
    "semantic-release": "^17.0.8",
    "stylelint": "^13.6.0",
    "stylelint-config-rational-order": "^0.1.2"
  },
  "keywords": [
    "blog",
    "development",
    "c#",
    ".net",
    "code",
    "javascript",
    "react"
  ],
  "browserslist": [
    "defaults",
    "IE >= 11",
    "firefox >= 43"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "verifyConditionsCmd": "npm run build",
          "publishCmd": "npm run deploy:s3"
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
